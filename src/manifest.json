{
  "manifest_version": 3,
  "name": "MedClarify",
  "version": "1.0.0",
  "description": "Translate medical jargon into plain language using Chrome's Built-in AI APIs",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "MedClarify - Medical Jargon Translator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "src/options/options.html"
}

